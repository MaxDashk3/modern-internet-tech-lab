@model ClassLibrary1.DataModels.Game
@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Details"];
}

@{
    var isOwned = ViewBag.IsOwned;
    var isInCart = ViewBag.IsInCart;
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<h1 class="mb-4">@Model.Title</h1>

<div class="row">
    <!-- Картинка гри -->
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm">
            <img src="@Model.ImageUrl"
                 class="card-img-top"
                 alt="@Model.Title"
                 style="object-fit: cover; height: 280px;" />
        </div>
    </div>

    <!-- Інформація про гру -->
    <div class="col-md-8 mb-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h4 class="card-title">@Model.Title</h4>

                <p class="card-text text-muted">
                    @Model.Description
                </p>

                <hr />

                <dl class="row mb-0">
                    <dt class="col-sm-3">
                        @Localizer["Release year"]
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(m => m.Year)
                    </dd>

                    <dt class="col-sm-3">
                        @Localizer["Price"]
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(m => m.Price)
                    </dd>

                    <dt class="col-sm-3">
                        @Localizer["Developer"]
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(m => m.Developer.Title)
                    </dd>

                    <dt class="col-sm-3">
                        @Localizer["Developer's email"]
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(m => m.Developer.ContactEmail)
                    </dd>
                </dl>
            </div>

            <div class="card-footer d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    ← @Localizer["Back to list"]
                </a>
                <div>
                    @if (currentUserId == Model.Developer.AuthorId)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            @Localizer["Edit"]
                        </a>
                    }
                @if (isOwned)
                {
                    <button class="btn btn-success" disabled>@Localizer["Owned"]</button>
                }
                else if (isInCart)
                {
                    <button class="btn btn-secondary" disabled>@Localizer["In Cart"]</button>
                }
                else
                {
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-gameId="@Model.Id" class="btn btn-primary">
                        @Localizer["Add to Cart"]
                    </a>
                }
                </div>
            </div>
        </div>
    </div>
</div>
